[grep]
  extendRegexp = true
  lineNumber = true

[includeIf "hasconfig:remote.*.url:**rea.de*/**"]
	path = ~/code/rea-git-config/gitconfig.rea

[include]
  path = ~/.gitconfig.user

[includeIf "hasconfig:remote.*.url:**rea.de*/**"]
  path = ~/.gitconfig.rea

[rebase]
	autoStash = true
